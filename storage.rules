rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to images
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 